%ul.entry-group
- entries.each do |line|
  %li.entry
    .entry-content
      = link_to line[1], line[0]
      .modal.comments
        %label{:for => "modal-1"}
          %a
            = disqus_count
            %i.fa.fa-comment-o
        %input#modal-1.modal-state{:type => "checkbox"}/
        .modal-window
          .modal-inner
            %label.modal-close{:for => "modal-1"}
            %h2
              = line[1]
            %iframe{:src => "modal"}